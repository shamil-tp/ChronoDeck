<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChronoDeck Register</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/register.css">
    <!-- <link rel="stylesheet" href="../../static/css/register.css"> -->
</head>

<body class="body">
    <div class="container flex__center--center">
        <div class="register__form--container glass-card justify-content-center align-items-center">
            <form action="">
                <div class="row p-3 text-white">
                    <div class="col-6">
                        <div class="mb-3">
                            <label class="form-label">Name :</label>
                            <input type="text" class="form-control input">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="mb-3">
                            <label class="form-label">User Name :</label>
                            <input type="text" class="form-control input">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="mb-3">
                            <label class="form-label">Email address: </label>
                            <input type="email" class="form-control input">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="mb-3">
                            <label class="form-label">Phone :</label>
                            <input type="tel" class="form-control input">
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="mb-3">
                            <label class="form-label">Date of Birth :</label>
                            <input type="date" class="form-control input">
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="mb-3">
                            <label class="form-label">Role :</label>
                            <div class="form-check">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1"
                                        value="option1">
                                    <label class="form-check-label" for="inlineCheckbox1">Admin</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" id="inlineCheckbox2"
                                        value="option2">
                                    <label class="form-check-label" for="inlineCheckbox2">Gamer</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                                    <label class="form-check-label" for="inlineCheckbox3">Collector</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="mb-3">
                            <label class="form-label">Password :</label>
                            <input type="password" class="form-control input">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="mb-3">
                            <label class="form-label">Confirm Password :</label>
                            <input type="password" class="form-control input">
                        </div>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Submit Registration:</label>
                        <div class="row btn__outline--container">
                            <div class="my-2 col-6">
                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-dark btn-outline" style="color: rgb(255, 83, 83);">Reset</button>
                            </div>
                        </div>
                        <div class="my-2 col-6">
                                <div class="d-grid gap-2">
                                <button class="btn btn-outline-dark btn-outline" style="color: rgb(65, 169, 75);">Submit</button>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <img src="/images/register/background.jpeg" alt="" class="background__image">
</body>
<script src="/bootstrap/js/bootstrap.min.js"></script>

</html>